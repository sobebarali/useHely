{
	"mcpServers": {
		"context7": {
			"command": "npx",
			"args": ["-y", "@upstash/context7-mcp"],
			"type": "stdio"
		},
		"shadcn": {
			"command": "npx",
			"args": ["shadcn@latest", "mcp"],
			"type": "stdio"
		},
		"mongodb": {
			"command": "npx",
			"args": [
				"-y",
				"mongodb-mcp-server",
				"--connectionString",
				"mongodb://localhost:27017/myDatabase",
				"--readOnly"
			],
			"type": "stdio"
		},
		"better-auth": {
			"command": "npx",
			"args": [
				"-y",
				"mcp-remote@latest",
				"https://mcp.chonkie.ai/better-auth/better-auth-builder/mcp"
			],
			"type": "remote"
		}
	}
}
