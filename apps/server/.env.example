DATABASE_URL=
BACKEND_URL=

# CORS Configuration (REQUIRED in production)
# Specify the allowed origin(s) for cross-origin requests
# Single origin: https://yourdomain.com
# Multiple origins: https://yourdomain.com,https://www.yourdomain.com
# In production, this MUST be set to prevent CSRF attacks
# In development/test, defaults to http://localhost:3000 if not set
CORS_ORIGIN=

UPSTASH_REDIS_URL=
UPSTASH_REDIS_TOKEN=

# Encryption
# Generate with: openssl rand -hex 32
# Or using Node.js crypto: require('crypto').randomBytes(32).toString('hex')
ENCRYPTION_MASTER_KEY=

RESEND_API_KEY=
EMAIL_FROM=
EMAIL_FROM_NAME=

# Dodo Payments (Billing)
# Get from Dodo dashboard: https://dashboard.dodopayments.com
DODO_PAYMENTS_API_KEY=
DODO_PAYMENTS_WEBHOOK_KEY=
# Environment: test_mode or live_mode
DODO_PAYMENTS_ENVIRONMENT=test_mode
# URL to redirect after checkout completion
DODO_PAYMENTS_RETURN_URL=

# Dodo Product IDs (configured in Dodo dashboard)
DODO_STARTER_MONTHLY_PRODUCT_ID=
DODO_STARTER_YEARLY_PRODUCT_ID=
DODO_PROFESSIONAL_MONTHLY_PRODUCT_ID=
DODO_PROFESSIONAL_YEARLY_PRODUCT_ID=