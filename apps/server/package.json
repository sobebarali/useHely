{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@hms/auth": "*",
		"@hms/db": "*",
		"better-auth": "^1.4.0",
		"cors": "^2.8.5",
		"dotenv": "^17.2.2",
		"express": "^5.1.0",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@hms/config": "*",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.1",
		"@types/node": "^22.13.11",
		"@types/supertest": "^6.0.3",
		"@vitest/ui": "^4.0.14",
		"supertest": "^7.1.4",
		"tsdown": "^0.16.5",
		"tsx": "^4.19.2",
		"typescript": "^5.8.2",
		"vitest": "^4.0.14"
	}
}
